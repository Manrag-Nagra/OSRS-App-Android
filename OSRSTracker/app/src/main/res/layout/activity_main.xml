<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/osrs3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/geButton"
        style="@android:style/Widget.Material.Button"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:background="#197886"
        android:text="Grand Exchange"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/hiscoreButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495" />

    <Button
        android:id="@+id/hiscoreButton"
        style="@android:style/Widget.Material.Button"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:background="#197886"
        android:text="HISCORES"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>